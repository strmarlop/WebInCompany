{% extends 'base.html.twig' %}

{% block title %}Interview
{% endblock %}

{% block body %}
	<h2>Interview -
		{{ interview.job }}</h2>

	<table class="table">
		<tbody>
			<tr>
				<th>Job</th>
				<td>{{ interview.job }}</td>
			</tr>
			<tr>
				<th>Company</th>
				<td>{{ interview.company }}</td>
			</tr>
			<tr>
				<th>Status interview</th>
				<td>{{ interview.statut.name }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ interview.date }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_interview_index') }}">Back to my interviews</a>
	<br>
	<a href="{{ path('app_interview_edit', {'id': interview.id}) }}">Edit this interview</a>

	{{ include('interview/_delete_form.html.twig') }}
{% endblock %}
